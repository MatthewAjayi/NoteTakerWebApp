@model NoteTakerWebApp.Models.Notes

@{
    ViewData["Title"] = "CreateNewNote";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@if (TempData["sucess"] != null)
{
    <div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;">
        <div class="toast" style="position: absolute; top: 0; right: 0;">
            <div class="toast-header">
                <img src="..." class="rounded mr-2" alt="...">
                <strong class="mr-auto">Bootstrap</strong>
                <small>11 mins ago</small>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
                <h2>@TempData["sucess"]</h2>
            </div>
        </div>
    </div>
    
}

<h1>Create New Note</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNewNote">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" cols="6" rows="6"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
                <i class="bi bi-plus-circle-fill"></i>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="ViewNotes" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
