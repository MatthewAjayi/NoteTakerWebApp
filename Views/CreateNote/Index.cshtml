@model NoteTakerWebApp.Models.Notes

@{
    ViewData["Title"] = "CreateNewNote";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@if (TempData["sucess"] != null)
{
    <h2>@TempData["sucess"]</h2>
}


<div class="row center" style="background-color: lightcyan;">

    <div class="col-md-4" >
        <h1>Create New Note</h1>
        <hr />
        <form asp-action="CreateNewNote">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" cols="6" rows="20"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <button class="btn btn-primary" type="submit">
                    Create Note <i class="bi bi-file-earmark-plus"></i>
                </button>

                <a class="btn btn-primary" asp-controller="ViewNotes" asp-action="Index">Back to List <i class="bi bi-list"></i></a>
                
            </div>
        </form>
    </div>
</div>

@*<div>
    <a asp-controller="ViewNotes" asp-action="Index">Back to List</a>
</div>*@
@if (TempData["Fail"] != null)
{
    <h2>@TempData["Fail"]</h2>
}

<style>
    .center {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
